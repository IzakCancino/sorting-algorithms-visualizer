<Window x:Class="sorting_algorithms_visualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sorting_algorithms_visualizer"
        mc:Ignorable="d"
        Title="Sorting Algorithms Viewer" Height="450" Width="800">
    <Grid x:Name="RootGrid" Tag="Location">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="28" />
        </Grid.RowDefinitions>

        <GridSplitter Grid.Column="0" Grid.RowSpan="1" Width="3"  HorizontalAlignment="Left" Background="#B6B6B6" Margin="297,0,0,0" />
        <GridSplitter x:Name="GridSplitterConsole" Grid.Row="0" Grid.ColumnSpan="2" Height="3" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Background="#B6B6B6" DragCompleted="GridSplitterConsole_DragCompleted" Tag="0" />

        
        <!--Console tab-->
        <TabControl Grid.ColumnSpan="2" Grid.Row="1">
            <TabItem x:Name="TabItemConsole" Header="Console" MouseDoubleClick="TabItemConsole_MouseDoubleClick">
                <Grid Background="#000000">
                    <RichTextBox Background="Black" Foreground="White" SelectionBrush="#FF57CCFA" SelectionTextBrush="Black" FontFamily="Consolas" VerticalScrollBarVisibility="Visible">
                        <RichTextBox.Resources>
                            <Style TargetType="{x:Type Paragraph}">
                                <Setter Property="Margin" Value="0"/>
                            </Style>
                        </RichTextBox.Resources>

                        <FlowDocument>
                            <Paragraph>
                                <Run Text=" ----- Sorting Algorithms Visualizer (Console) ----- "/>
                            </Paragraph>
                        </FlowDocument>
                    </RichTextBox>
                </Grid>
            </TabItem>
        </TabControl>





    </Grid>
</Window>
